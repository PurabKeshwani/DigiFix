<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient"
    tools:context=".DashboardActivity">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <!-- HEADER: Centered Brand (Clean & Premium) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="24dp">

                <!-- 1. Left: Profile (Person Icon) -->
                <FrameLayout
                    android:id="@+id/btnProfile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_nav_circle_glass"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person"
                        app:tint="@color/white" />
                </FrameLayout>

                <!-- 2. Center: Brand (High Contrast) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/app_logo"
                        android:background="@drawable/bg_circle_white"
                        android:padding="4dp"
                        android:layout_marginEnd="10dp"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIGIFIX"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.05"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />
                </LinearLayout>

                <!-- 3. Right: Notification -->
                <FrameLayout
                    android:id="@+id/btnNotif"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_nav_circle_glass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_email"
                        app:tint="@color/white" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_notification_dot" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- DASHBOARD OVERVIEW (Revenue + Status) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="24dp">

                <!-- 1. Revenue Card (Final Polish) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_earnings_premium"
                    android:paddingTop="20dp"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="0dp"
                    android:elevation="8dp">

                    <!-- Visual Decoration (Graph) - Aligned to Bottom Edge -->
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:src="@drawable/bg_graph_placeholder"
                        android:scaleType="fitXY"
                        android:alpha="0.5"
                        app:tint="#80FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginHorizontal="-20dp"
                        android:layout_marginBottom="0dp" />

                    <!-- Header -->
                    <LinearLayout
                        android:id="@+id/layoutRevHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/app_logo"
                            app:tint="@color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL REVENUE"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp"
                            android:letterSpacing="0.2"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Growth Chip (Top-Right) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_pill_white_solid"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="+12.5%"
                        android:textColor="@color/primary_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:elevation="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Amount -->
                    <TextView
                        android:id="@+id/tvTotalRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:text="₹4,285.00"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="4"
                        android:shadowRadius="8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutRevHeader"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 2. Job Status Row (Premium Glass Tiles) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="4dp">

                    <!-- Pending (Orange) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_card_glass_island"
                        android:layout_marginEnd="8dp">

                        <!-- Watermark Icon -->
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#20F5A623"
                            android:rotation="-15"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="-8dp" />

                        <!-- Count (Top-Left) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Label (Bottom-Left) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PENDING"
                            android:textColor="#CCFFFFFF"
                            android:textSize="10sp"
                            android:letterSpacing="0.1"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Active (Blue) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_card_glass_island"
                        android:layout_marginEnd="8dp">

                        <!-- Watermark Icon -->
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_repairs"
                            app:tint="#204A90E2"
                            android:rotation="-15"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="-8dp" />

                        <!-- Count (Top-Left) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Label (Bottom-Left) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVE"
                            android:textColor="#CCFFFFFF"
                            android:textSize="10sp"
                            android:letterSpacing="0.1"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Done (Green) -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_card_glass_island">

                        <!-- Watermark Icon -->
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#207ED321"
                            android:rotation="-15"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="-8dp" />

                        <!-- Count (Top-Left) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="124"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Label (Bottom-Left) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DONE"
                            android:textColor="#CCFFFFFF"
                            android:textSize="10sp"
                            android:letterSpacing="0.1"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Activity List (Reference Style) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECENT ACTIVITY"
                    android:textColor="#CCFFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/primary_orange"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="24dp">

                <!-- Activity Card 1 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_activity_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvActTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="MacBook Pro Screen Replaced"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvActTime1" />

                    <TextView
                        android:id="@+id/tvActTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 min ago"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvActTitle1"
                        app:layout_constraintBottom_toBottomOf="@id/tvActTitle1" />

                    <TextView
                        android:id="@+id/tvActSub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Order #2234 • Rahul Sharma"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvActTitle1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_pill_green"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="Completed"
                        android:textColor="#4CAF50"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvActSub1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Activity Card 2 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_activity_card"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/tvActTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Diagnostic Started"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvActTime2" />

                    <TextView
                        android:id="@+id/tvActTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h ago"
                        android:textColor="#80FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvActTitle2"
                        app:layout_constraintBottom_toBottomOf="@id/tvActTitle2" />

                    <TextView
                        android:id="@+id/tvActSub2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Order #2240 • Priya Patel"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvActTitle2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_pill_blue"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="In Progress"
                        android:textColor="#4A90E2"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvActSub2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- NAVIGATION: Integrated Capsule (The Remote) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navDock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_nav_bar_glass"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 1. Home (Active) -->
            <FrameLayout
                android:id="@+id/btnNavHome"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/primary_orange" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="visible" />
            </FrameLayout>

            <Space android:layout_width="4dp" android:layout_height="wrap_content" />

            <!-- 2. Repairs -->
            <FrameLayout
                android:id="@+id/btnNavRepairs"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navRepairs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_repairs"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <!-- CENTER: INTEGRATED FAB -->
            <ImageButton
                android:id="@+id/fabMain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_circle_orange"
                android:elevation="4dp"
                android:src="@drawable/ic_plus"
                android:padding="12dp"
                android:scaleType="fitCenter"
                app:tint="@color/white" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <!-- 3. Clients -->
            <FrameLayout
                android:id="@+id/btnNavClients"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navClients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_person"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="4dp" android:layout_height="wrap_content" />

            <!-- 4. Settings -->
            <FrameLayout
                android:id="@+id/btnNavSettings"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_settings"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>