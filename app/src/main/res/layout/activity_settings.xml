<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient">

    <!-- Header & Profile -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Profile Card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_glass_island"
            android:padding="20dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_person"
                app:tint="@color/white"
                android:background="@drawable/bg_circle_glass"
                android:padding="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/imgAvatar"
                app:layout_constraintEnd_toStartOf="@id/chipPro"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amit's Workshop"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 98765 43210"
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chipPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO"
                android:textColor="#FFD700"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_chip_glass"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- Settings List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/navDock">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Section: Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_glass"
                android:divider="@drawable/ic_divider_horizontal"
                android:showDividers="middle">

                <!-- Shop Profile -->
                <LinearLayout
                    android:id="@+id/btnShopProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_repairs"
                        app:tint="#2196F3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shop Profile"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_up"
                        android:rotation="90"
                        app:tint="#80FFFFFF" />
                </LinearLayout>

                <!-- Divider Line manually if needed, but showDividers handles generic spacing -->
                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#10FFFFFF" />

                <!-- Security -->
                <LinearLayout
                    android:id="@+id/btnSecurity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Security &amp; Login"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_up"
                        android:rotation="90"
                        app:tint="#80FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <Space android:layout_width="match_parent" android:layout_height="24dp" />

            <!-- Section: App Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREFERENCES"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_glass"
                android:divider="@drawable/ic_divider_horizontal"
                android:showDividers="middle">

                <!-- Notifications -->
                <LinearLayout
                    android:id="@+id/btnNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        app:tint="#FF9800" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notifications"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_up"
                        android:rotation="90"
                        app:tint="#80FFFFFF" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#10FFFFFF" />

                <!-- Dark Mode -->
                <LinearLayout
                    android:id="@+id/btnDarkMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="#9C27B0" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dark Mode"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <!-- Toggle Switch visualization -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_chip_glass">
                        <View
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/bg_circle_glass"
                            android:backgroundTint="#9C27B0"
                            android:layout_marginEnd="3dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

            <Space android:layout_width="match_parent" android:layout_height="32dp" />

            <!-- Logout -->
            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_card_glass"
                android:clickable="true"
                android:foreground="?selectableItemBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 1.0.2 (Beta)"
                android:textColor="#40FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- NAVIGATION: Integrated Capsule (The Remote) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navDock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_nav_bar_glass"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 1. Home -->
            <FrameLayout
                android:id="@+id/btnNavHome"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_home"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="4dp" android:layout_height="wrap_content" />

            <!-- 2. Repairs -->
            <FrameLayout
                android:id="@+id/btnNavRepairs"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navRepairs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_repairs"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <!-- CENTER: INTEGRATED FAB -->
            <ImageButton
                android:id="@+id/fabMain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_circle_orange"
                android:elevation="4dp"
                android:src="@drawable/ic_plus"
                android:padding="12dp"
                android:scaleType="fitCenter"
                app:tint="@color/white" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <!-- 3. Clients -->
            <FrameLayout
                android:id="@+id/btnNavClients"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navClients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_person"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="4dp" android:layout_height="wrap_content" />

            <!-- 4. Settings (Active) -->
            <FrameLayout
                android:id="@+id/btnNavSettings"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/primary_orange" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="visible" />
            </FrameLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>