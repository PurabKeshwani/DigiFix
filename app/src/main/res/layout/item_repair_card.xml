<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#1AFFFFFF"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="#0DFFFFFF"
    app:cardElevation="0dp">

    <!-- Stack/Frame for overlapping elements -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. Left Color Strip -->
        <View
            android:id="@+id/viewStatusStrip"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FF9800"
            android:layout_gravity="start" />

        <!-- 2. Content Column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <!-- Header Row: Name & Device -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="CUSTOMER NAME"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Device Chip -->
                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_glass"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    tools:text="IPHONE 13"
                    android:textColor="#FF9800"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <!-- Warranty Icon -->
                <ImageView
                    android:id="@+id/imgVerified"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_verified"
                    app:tint="#7C4DFF"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- Issue Row (Expandable) -->
            <LinearLayout
                android:id="@+id/layoutIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_warning"
                    app:tint="#FFC107"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Screen Broken, Battery Draining Fast..."
                    android:textColor="#E6FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Accessories Row -->
            <LinearLayout
                android:id="@+id/layoutAccessories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_cable"
                    app:tint="#FF9800"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAccessories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="CHARGER, BOX"
                    android:textColor="#E6FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Center / Status Info (Recycler Part) -->
            <LinearLayout
                android:id="@+id/layoutCenterInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/imgCenterIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_store"
                    app:tint="#7C4DFF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvCenterInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="At Apple Service Nagpur"
                    android:textColor="#7C4DFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Footer: Date, Price, Added By -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_clock"
                    app:tint="#99FFFFFF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="FEB 19, 5:00 PM"
                    android:textColor="#99FFFFFF"
                    android:textSize="11sp"
                    android:letterSpacing="0.05" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Price -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="â‚¹15,000"
                    android:textColor="#4CAF50"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="#1affffff"
                    android:layout_marginEnd="8dp" />

                <!-- Added By -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0DFFFFFF"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_person"
                        app:tint="#80FFFFFF"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/tvAddedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=": MK"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>