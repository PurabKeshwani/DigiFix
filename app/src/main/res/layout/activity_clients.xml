<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clients"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active &amp; Past Customers"
                android:textColor="#80FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Glass Search Bar -->
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_card_glass"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search"
                app:tint="#80FFFFFF"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Search..."
                android:textColor="#FFFFFF"
                android:textColorHint="#60FFFFFF"
                android:textSize="14sp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch" />
        </LinearLayout>

    </LinearLayout>

    <!-- Quick Stats Strip -->
    <HorizontalScrollView
        android:id="@+id/scrollStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="24dp"
        android:clipToPadding="false"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Stat 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_people"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124 Total"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Stat 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_notification_dot"
                    android:backgroundTint="#FF9800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Active"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Stat 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5 New"
                    android:textColor="#64B5F6"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Clients List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollStats"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_client_card"
        tools:itemCount="4" />

    <!-- NAVIGATION: Integrated Capsule (The Remote) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/navDock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_nav_bar_glass"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 1. Home -->
            <FrameLayout
                android:id="@+id/btnNavHome"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_home"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="4dp" android:layout_height="wrap_content" />

            <!-- 2. Repairs -->
            <FrameLayout
                android:id="@+id/btnNavRepairs"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navRepairs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_repairs"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <!-- CENTER: INTEGRATED FAB -->
            <ImageButton
                android:id="@+id/fabMain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_fab_circle_orange"
                android:elevation="4dp"
                android:src="@drawable/ic_plus"
                android:padding="12dp"
                android:scaleType="fitCenter"
                app:tint="@color/white" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <!-- 3. Clients (Active) -->
            <FrameLayout
                android:id="@+id/btnNavClients"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navClients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/primary_orange" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="visible" />
            </FrameLayout>

            <Space android:layout_width="4dp" android:layout_height="wrap_content" />

            <!-- 4. Settings -->
            <FrameLayout
                android:id="@+id/btnNavSettings"
                android:layout_width="42dp"
                android:layout_height="42dp">
                <ImageView
                    android:id="@+id/navSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_settings"
                    app:tint="#80FFFFFF" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_notification_dot"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>